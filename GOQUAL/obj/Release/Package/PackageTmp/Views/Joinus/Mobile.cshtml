@model GOQUAL.Views.Joinus.IndexViewModel
@{
    Layout = "~/Views/Shared/_MobileLayout.cshtml";
}
@section Style {
    <link href="~/Lib/GOQUAL/css/mobile/home.css" rel="stylesheet" />
}

<!-- Navigation panel -->
<nav class="main-nav js-stick stick-fixed">
    <div class="full-wrapper relative clearfix">
        <div class="nav-logo-wrap local-scroll">
            <a href="#top" class="logo">
                <img src="~/Lib/GOQUAL/images/ci/1.png" width="80" height="27" alt="" /></a>
        </div>
        <div class="mobile-nav"><i class="fa fa-bars"></i></div>
        <div class="inner-nav desktop-nav">
            <ul class="clearlist scroll-nav local-scroll">
                <li class="active"><a href="/Home/Mobile?lang=@(Model.Lang)">HOME</a></li>
                <li><a href="/Company/Mobile?lang=@(Model.Lang)">COMPANY</a></li>
                <li><a href="/Product/Mobile?lang=@(Model.Lang)">PRODUCT</a></li>
                <li><a href="/Contact/Mobile?lang=@(Model.Lang)">CONTACT</a></li>
                <li><a href="/Joinus/Mobile?lang@(Model.Lang)">JOIN US</a></li>
                <li><a href="/Info/Mobile?lang=@(Model.Lang)">NEWS</a></li>
                <li>
                    <a href="#" class="mn-has-sub">LANGUAGE <i class="fa fa-angle-down"></i></a>
                    <ul class="mn-sub">
                        <li><a href="/Home/Mobile?lang=0">KOREA</a></li>
                        <li><a href="/Home/Mobile?lang=1">ENGLISH</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</nav>

<!-- prize -->
<div class="fullwidth-slider owl-carousel">
    <section class="page-section bg-scroll bg-color-white">
        <div class="container relative">
            <div class="row">
                <div class="col-md-7 animate-init" data-anim-type="fade-in-right-big" data-anim-delay="100">
                    <!-- Image -->
                    <div class="work-full-media mt-0 align-center">
                        <img src="~/Lib/GOQUAL/images/join/joinus_1.png" />
                    </div>
                </div>
                <div class="col-md-5 col-lg-4 col-lg-offset-1 pt-20 pt-sm-0 animate-init align-left" data-anim-type="fade-in-left-big" data-anim-delay="100">
                    <!-- About Project -->
                    <div class="text">
                        <h3 class="goqual_color">JOIN US</h3>

                        @if (Model.Lang == 0)
                        {
                            <h3 style="font-size: 12px;">고퀄과 함께 나아갈 QUALITY 있는 인재를 찾고 있습니다.</h3>
                            <div class="section-heading pb-20 mb-20 mb-xxs-10 goqual_company_text align-left">
                                놀 떄도 일할때도 Quality 있는 사람들이 GOQUAL에서 인재를 찾습니다.
                                자신의 서비스를 사용하는 고객을 보고 싶은 개발자, 디자이너 분들!
                                고객과 더 가까이서 소통하고 싶은 기획, 마케너 분들!
                                수직적인 구조에서는 힘든 큰 그림을 함께 그려봐요!
                                편하게 와서 커피 한잔 해요 :)
                            </div>
                        }
                        else
                        {
                            <h3 style="font-size: 18px;">GOQUAL want to find new high quality partner!</h3>
                            <div class="section-heading pb-20 mb-20 mb-xxs-10 goqual_company_text align-left">
                                Everytime we are happy in GOQUAL.
                                Developer, designers who want to see customers using our product!
                                Marketer, Planner who want to communication with our customers!
                                Let's drawing big picture in GOQUAL.
                                Touch us! Let's have a cup of coffee :)
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
