        <script type="text/javascript" src="http://openapi.map.naver.com/openapi/naverMap.naver?ver=2.0&key=1913e9638e6b1588bb2e79b1127cc8f9"></script>        
    }
    else if (Request.Url.ToString() == "http://goqual.com/Contact/Index?lang=0")
    {
        <script type="text/javascript" src="http://openapi.map.naver.com/openapi/naverMap.naver?ver=2.0&key=1913e9638e6b1588bb2e79b1127cc8f9"></script>        
    }
    else
    {
        <script type="text/javascript" src="http://openapi.map.naver.com/openapi/naverMap.naver?ver=2.0&key=1913e9638e6b1588bb2e79b1127cc8f9"></script>
    }
    <!-- ngTable -->
    <script src="~/Lib/GOQUAL/js/ng-table.js"></script>
    <script src="~/Lib/GOQUAL/js/ngTableResetPage.js"></script>
    <script src="~/Lib/GOQUAL/js/ui-bootstrap-tpls-0.11.0.js"></script>
    <script src="~/Lib/GOQUAL/js/Contact/Index.js"></script>
