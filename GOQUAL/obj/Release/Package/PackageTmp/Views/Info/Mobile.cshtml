@model GOQUAL.Views.Info.IndexViewModel
@{
    Layout = "~/Views/Shared/_MobileLayout.cshtml";
}
@section Style {
    <link href="~/Lib/GOQUAL/css/mobile/info.css" rel="stylesheet" />
}
@section Script
{
    <script type="text/javascript">
        try { document.execCommand('BackgroundImageCache', false, true); } catch (e) { }
    </script>
    <script src="~/Lib/GOQUAL/js/angular.js"></script>
    <script src="~/Lib/GOQUAL/js/filters.js"></script>
    <script src="~/Lib/GOQUAL/js/ng-table.js"></script>
    <script src="~/Lib/GOQUAL/js/ngTableResetPage.js"></script>
    <script src="~/Lib/GOQUAL/js/ui-bootstrap-tpls-0.11.0.js"></script>
    <script src="~/Lib/GOQUAL/js/underscore-min.js"></script>
    <script src="~/Lib/GOQUAL/js/ajaxBody.js"></script>
    <script src="~/Lib/GOQUAL/js/Info/Info.js"></script>
}
<input type="hidden" id="isMobile" value="1" />
<!-- Navigation panel -->
<nav class="main-nav js-stick stick-fixed">
    <div class="full-wrapper relative clearfix">
        <div class="nav-logo-wrap local-scroll">
            <a href="#top" class="logo">
                <img src="~/Lib/GOQUAL/images/ci/1.png" width="80" height="27" alt="" /></a>
        </div>
        <div class="mobile-nav"><i class="fa fa-bars"></i></div>
        <div class="inner-nav desktop-nav">
            <ul class="clearlist scroll-nav local-scroll">
                <li class="active"><a href="/Home/Mobile?lang=@(Model.Lang)">HOME</a></li>
                <li><a href="/Company/Mobile?lang=@(Model.Lang)">COMPANY</a></li>
                <li><a href="/Product/Mo_Ko?lang=@(Model.Lang)">PRODUCT</a></li>
                <li><a href="/Contact/Mobile?lang=@(Model.Lang)">CONTACT</a></li>
                <li><a href="/Joinus/Mobile?lang=@(Model.Lang)">JOIN US</a></li>
                <li><a href="/Info/Mobile?lang=@(Model.Lang)">NEWS</a></li>
                <li>
                    <a href="#" class="mn-has-sub">LANGUAGE <i class="fa fa-angle-down"></i></a>
                    <ul class="mn-sub">
                        <li><a href="/Info/Mobile?lang=0">KOREA</a></li>
                        <li><a href="/Info/Mobile?lang=1">ENGLISH</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div ng-controller="InfoCtrl">
    <!-- Services Section -->
    <section class="split-section bg-scroll bg-dark-alfa-50" 
        data-background="/Lib/GOQUAL/images/member/header.png" id="services">
        <div class="clearfix relative">

            <!-- Section Headings -->
            <div class="split-section-headings animate-init" data-anim-type="fade-in-up" data-anim-delay="100">
                <div class="ssh-table">
                    <div class="ssh-cell pt-140 pt-sm-70 pt-xs-50 pb-140 pb-sm-70 pb-xs-50">
                        <div class="section-title white">
                            OUR STORY
                        </div>
                        @if (Model.Lang == 0)
                        {
                            <h2 class="section-heading white">BETTER LIFE를 통한 더 나은 세상.<BR /> QUALITY있는 세상을 만드는 기업 고퀄입니다.</h2>
                        }
                        else
                        {
                            <h2 class="section-heading white">BETTER WORLD THROUGH BETTER LIFE. THE COMPANY GOQUAL CREATE A WORLD WHERE QUALITY.</h2>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- End Services Section -->
    <section class="page-section pt-50" id="about" style="padding: 0">
        <div class="container relative">

            <!-- Nav Tabs -->
            <div class="align-center mb-50 mb-xxs-30">
                <ul class="nav nav-tabs tpl-minimal-tabs animate goqual_tab">
                    <li class="active">
                        <a href="#news" data-toggle="tab">News</a>
                    </li>
                    <li>
                        <a href="#blog" data-toggle="tab">Blog</a>
                    </li>
                </ul>
            </div>

            <!-- Tab Content -->
            <div class="tab-content tpl-minimal-tabs-cont mb-xxs-30 mt-xxs-30">
                <div class="tab-pane fade in active" id="news">
                    <div class="row" style="padding: 10px;">
                        <div class="content_body">
                            @if (Model.Lang == 0)
                            {
                                <p class="goqual_tab_content_title">GOQUAL의 새로운 소식입니다</p>
                            }
                            else
                            {
                                <p class="goqual_tab_content_title">THE NEWS OF GOQUAL</p>
                            }
                            <div class="section-line mb-60 mb-xxs-30"></div>
                            <div class="goqual_tab_table_body">
                                @if (Model.Lang == 0)
                                {
                                    <table ng-table="tableParams" class="table table-striped goqual_table">
                                        <tr ng-repeat="item in news.items">
                                            <td data-title="'번호'" sortable="'Id'" style="vertical-align: middle;">{{item.Id}}
                                            </td>
                                            <td data-title="'제목'" sortable="'Label'">
                                                <a href="/Info/DetailNews?id={{item.Id}}&lang=@(Model.Lang)">{{item.Title}}</a>
                                            </td>
                                            <td data-title="'생성일'" sortable="'Address'">{{item.Created | shortdate}}
                                            </td>
                                        </tr>
                                    </table>
                                }
                                else
                                {
                                    <table ng-table="tableParams" class="table table-striped goqual_table">
                                        <tr ng-repeat="item in news.items">
                                            <td data-title="'Index'" sortable="'Id'" style="vertical-align: middle;">{{item.Id}}
                                            </td>
                                            <td data-title="'Title'" sortable="'Label'">
                                                <a href="/Info/DetailNews?id={{item.Id}}">{{item.Title}}</a>
                                            </td>
                                            <td data-title="'Created'" sortable="'Address'">{{item.Created | shortdate}}
                                            </td>
                                        </tr>
                                    </table>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Skills -->
                <div class="tab-pane fade" id="blog">
                    <!-- Blog Section -->
                    <section class="page-section" id="news">
                        <div class="relative">
                            <!-- Section Headings -->
                            <div class="container">
                                <div class="row">
                                    <div class="col-md-8 col-md-offset-2 col-lg-8 col-lg-offset-2">
                                        <div class="section-title">
                                            <img src="~/Lib/GOQUAL/images/home/home_typho.png" />
                                        </div>
                                        @if (Model.Lang == 0)
                                        {
                                            <h2 class="section-heading">BETTER LIFE를 통한 더 나은 세상.<br />
                                                QUALITY있는 세상을 만드는 기업 고퀄입니다.
                                            </h2>
                                        }
                                        <div class="section-line mb-60 mb-xxs-30"></div>
                                    </div>
                                </div>
                            </div>
                            <!-- End Section Headings -->

                            <!-- Blog Posts Grid -->
                            <div class="last-posts-grid clearfix">
                                <a ng-repeat="blog in blogs" href="/Info/Mo_DetailBlog?id={{blog.Id}}&lang=@(Model.Lang)" class="lp-item animate-init" data-anim-type="fade-in" data-anim-delay="100">
                                    <div class="lp-image">
                                        <img alt="" src="/Info/GetBlogImage?id={{blog.FirstBlogImage.Id}}" class="img-responsive">
                                    </div>
                                    <div class="lp-descr">
                                        <h4 class="lp-title">{{blog.Title}}</h4>
                                        <div class="lp-author">
                                            {{blog.Updated | shortdate}}
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </section>

    <!-- scroll up -->
    <div class="bot-menu local-scroll">
        <!-- Scroll Up -->
        <a href="#top" class="bot-menu-item" data-anim-type="fade-in-left" data-anim-delay="0">
            <span class="bot-menu-icon">
                <i class="fa fa-arrow-circle-o-up"></i>
            </span>
            Scroll Up
        </a>
    </div>
</div>
