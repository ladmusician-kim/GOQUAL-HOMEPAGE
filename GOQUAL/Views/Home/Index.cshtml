@model GOQUAL.Views.Home.IndexViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Style {
    <link href="~/Lib/GOQUAL/css/jquery.fullPage.css" rel="stylesheet" />
    <link href="~/Lib/js-plugin/isotope/css/style.css" rel="stylesheet" />
}
@section Script {
    <script src="~/Lib/GOQUAL/js/jquery.slimscroll.min.js"></script>
    <script src="~/Lib/GOQUAL/js/jquery.fullPage.js"></script>
    <script src="~/Lib/js-plugin/isotope/jquery.isotope.js"></script>
    <script src="~/Lib/js-plugin/isotope/jquery.isotope.sloppy-masonry.min.js"></script>
    <script src="~/Lib/GOQUAL/js/Home/Index.js"></script>
}

@Html.HiddenFor(x => x.Lang)
<div ng-controller="HomeCtrl">
    <header class="navbar-fixed-top">
        <!-- header -->
        <div id="mainHeader" role="banner">
            <div class="container">
                <nav class="navbar navbar-default scrollMenu" role="navigation">
                    <div class="navbar-header">
                        <!-- responsive navigation -->
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <div class="navbar-toggle">
                            <a href="/Home/Korea" class="goqual_lang_ko" style="font-size: 13px;">한국어</a>
                            |
                        <a href="/Home/English" class="goqual_lang_eng" style="font-size: 13px;">ENGLISH</a>
                        </div>
                        <!-- Logo -->
                        <a class="navbar-brand" href="/Home/Index?lang=@(Model.Lang)">
                            <img class="goqual_menu_header" src="~/Lib/GOQUAL/images/ci/1.png" alt="GOQUAL 고퀄 주식회사" />
                        </a>
                    </div>
                    <div class="collapse navbar-collapse" id="mainMenu">
                        <ul class="language_menu_dropdown nav navbar-nav pull-right goqual_lang_menu">
                            <li class="primary goqual_lang_ko">
                                <a ng-click="changeLang_ko()" class="firstLevel">한국어</a>
                            </li>
                            <li class="sep"></li>
                            <li class="primary goqual_lang_eng">
                                <a ng-click="changeLang_eng()" class="firstLevel">ENGLISH</a>
                            </li>
                        </ul>
                        <!-- Main navigation -->
                        <ul class="nav navbar-nav pull-right">
                            <li class="primary">
                                <a href="/Home/Index?lang=@(Model.Lang)" class="firstLevel">HOME</a>
                            </li>
                            <li class="sep"></li>
                            <li class="primary">
                                <a href="/Company/Index?lang=@(Model.Lang)" class="firstLevel">COMPANY</a>
                            </li>
                            <li class="sep"></li>
                            <li class="primary">
                                <a href="/Product/Index?lang=@(Model.Lang)" class="firstLevel">PRODUCT</a>
                            </li>
                            <li class="sep"></li>
                            <li class="primary">
                                <a href="/Contact/Index?lang=@(Model.Lang)" class="firstLevel">CONTACT</a>
                            </li>
                            <li class="sep"></li>
                            <li class="primary">
                                <a href="/Joinus/Index?lang=@(Model.Lang)" class="firstLevel">JOIN US</a>
                            </li>
                            <li class="sep"></li>
                            <li class="primary">
                                <a href="/Info/Index?lang=@(Model.Lang)" class="firstLevel">NEWS</a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
    </header>

    <section class="tabsDetails goqual_container" data-nekoanim="fadeInUp" data-nekodelay="100">
        <div id="fullpage">
            <div class="section align_center" id="section0">
                <div class="slide" id="slide1" data-anchor="slide1">
                    <div class="img_container">
                        <img ng-show="lang == 0" class="goqual_image img-responsive" src="~/Lib/GOQUAL/images/home/kor/home_ko_1.png" />
                        <img ng-show="lang == 1" class="goqual_image img-responsive" src="~/Lib/GOQUAL/images/home/eng/home_eng_1.png" />
                    </div>
                </div>
                <div class="slide" id="slide2" data-anchor="slide2">
                    <div class="img_container">
                        <img ng-show="lang == 0" class="goqual_image img-responsive" src="~/Lib/GOQUAL/images/home/kor/home_ko_2.png" />

                        <img ng-show="lang == 1" class="goqual_image img-responsive" src="~/Lib/GOQUAL/images/home/eng/home_eng_2_1.png" style="margin-bottom: 2%;" />
                        <img ng-show="lang == 1" class="goqual_image img-responsive" src="~/Lib/GOQUAL/images/home/eng/home_eng_2_2.png" style="width: 40%" />
                    </div>
                </div>
            </div>
            <div class="section" id="section1">
                <section id="page" class="">
                    <section id="content" class="goqual_container">
                        <section class="pb30">
                            <div class="container clearfix">
                                <div class="row">
                                    <div class="span12 text-center">
                                        <a href="/Info/Index">
                                            <img src="~/Lib/GOQUAL/images/home/home_typho.png" class="pt30" style="width: 47%;" />
                                        </a>
                                    </div>
                                    <div class="mt30 portfolio-items  isotopeWrapper clearfix imgHover neko-hover-1" id="2">
                                        @foreach (var blog in Model.Blogs)
                                        {
                                            <!-- portfolio item -->
                                            <article class="col-sm-4 isotopeItem women mb15">
                                                <figure>
                                                    <a href="/Info/DetailBlog?id=@(blog.Id)">
                                                        <img alt="" src="/Info/GetBlogImage?id=@(blog.FirstBlogImage.Id)" class="img-responsive">
                                                    </a>
                                                    <figcaption>
                                                        <ul class="pinInfo">
                                                            <li><a href=""><i class="icon-eye"></i>@(blog.Hit)</a></li>
                                                            <li><a href=""><i class="icon-comment-1"></i>@(blog.Comments.Count)</a></li>
                                                        </ul>
                                                        <div class="iconLinks">
                                                            <a href="/Info/DetailBlog?id=@(blog.Id)">
                                                                <i class="icon-search"></i>
                                                            </a>
                                                        </div>
                                                    </figcaption>
                                                </figure>
                                                <section class="boxContent">
                                                    <h3>@(blog.Title)</h3>
                                                    <p>
                                                        @(blog.Updated)
                                                    </p>
                                                </section>
                                            </article>
                                        }
                                    </div>
                                    <div class="mt30">
                                        @if (Model.Lang == 0)
                                        {
                                            <input type="button" class="btn btn-lg" style="width: 100%" value="더 많은 정보 보러가기" ng-click="goBlogs()" />
                                        }
                                        else
                                        {
                                            <input type="button" class="btn btn-lg" style="width: 100%" value="MORE INFORMATION" ng-click="goBlogs()" />
                                        }
                                    </div>
                                </div>
                            </div>
                        </section>
                    </section>
                </section>

                <!-- footer -->
                <footer id="footerWrapper" class="footer2">
                    <section id="footerRights">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-12">
                                    <ul class="socialNetwork">
                                        <li>
                                            <a class="tips fb-like"
                                                title="follow me on Facebook"
                                                onclick="window.open('http://facebook.com/goqual');">
                                                <i class="icon-facebook-1 iconRounded"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                                <div class="col-md-12">
                                    <p>
                                        ⓒ 2014 GOQUAL.Inc. All rights reserved.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </section>
                </footer>
            </div>
        </div>
    </section>
</div>
