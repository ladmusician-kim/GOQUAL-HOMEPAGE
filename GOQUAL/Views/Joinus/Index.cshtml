@model GOQUAL.Views.Joinus.IndexViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Style {
    <link href="~/Lib/GOQUAL/css/jquery.toastmessage.css" rel="stylesheet" />
}
@section Script
{
    <script src="~/Lib/GOQUAL/js/jquery.toastmessage.js"></script>
    <script src="~/Lib/GOQUAL/js/toastBody.js"></script>
    <script src="~/Lib/GOQUAL/js/Joinus/Index.js"></script>
}
@Html.HiddenFor(x => x.Lang)
<div ng-controller="JoinCtrl">
    <header class="navbar-fixed-top">
        <!-- header -->
        <div id="mainHeader" role="banner">
            <div class="container">
                <nav class="navbar navbar-default scrollMenu" role="navigation">
                    <div class="navbar-header">
                        <!-- responsive navigation -->
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <div class="navbar-toggle">
                            <a href="/Home/Korea" class="goqual_lang_ko" style="font-size: 13px;">한국어</a>
                            |
                        <a href="/Home/English" class="goqual_lang_eng" style="font-size: 13px;">ENGLISH</a>
                        </div>
                        <!-- Logo -->
                        <a class="navbar-brand" href="/Home/Index?lang=@(Model.Lang)">
                            <img class="goqual_menu_header" src="~/Lib/GOQUAL/images/ci/1.png" alt="GOQUAL 고퀄 주식회사" />
                        </a>
                    </div>
                    <div class="collapse navbar-collapse" id="mainMenu">
                        <ul class="language_menu_dropdown nav navbar-nav pull-right goqual_lang_menu">
                            <li class="primary goqual_lang_ko">
                                <a ng-click="changeLang_ko()" class="firstLevel">한국어</a>
                            </li>
                            <li class="sep"></li>
                            <li class="primary goqual_lang_eng">
                                <a ng-click="changeLang_eng()" class="firstLevel">ENGLISH</a>
                            </li>
                        </ul>
                        <!-- Main navigation -->
                        <ul class="nav navbar-nav pull-right">
                            <li class="primary">
                                <a href="/Home/Index?lang=@(Model.Lang)" class="firstLevel">HOME</a>
                            </li>
                            <li class="sep"></li>
                            <li class="primary">
                                <a href="/Company/Index?lang=@(Model.Lang)" class="firstLevel">COMPANY</a>
                            </li>
                            <li class="sep"></li>
                            <li class="primary">
                                <a href="/Product/Index?lang=@(Model.Lang)" class="firstLevel">PRODUCT</a>
                            </li>
                            <li class="sep"></li>
                            <li class="primary">
                                <a href="/Contact/Index?lang=@(Model.Lang)" class="firstLevel">CONTACT</a>
                            </li>
                            <li class="sep"></li>
                            <li class="primary">
                                <a href="/Joinus/Index?lang=@(Model.Lang)" class="firstLevel">JOIN US</a>
                            </li>
                            <li class="sep"></li>
                            <li class="primary">
                                <a href="/Info/Index?lang=@(Model.Lang)" class="firstLevel">NEWS</a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
    </header>
    <section id="page" class="goqual_container">
        <div class="goqual_joinus_body">
            <div style="display: table; width: 100%; text-align: center;">
                <div class="goqual_table_row" style="display: table-row; width: 100%; vertical-align: middle;">
                    <div style="display: table-cell; height: inherit; vertical-align: middle;">
                        <a ng-click="join()">
                            @if (Model.Lang == 0)
                            {
                                <img src="~/Lib/GOQUAL/images/join/ko/joinus_ko_full.png" class="goqual_image" style="width: 70%" />
                            }
                            else
                            {
                                <img src="~/Lib/GOQUAL/images/join/eng/joinus_eng_full.png" class="goqual_image" style="width: 70%" />
                            }
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
