<div ng-controller="ContactCtrl">
    <!-- About Us Section -->
    <section class="page-section pt-50" id="about" style="padding: 0">
        <div class="container relative">

            <!-- Nav Tabs -->
            <div class="align-center mb-50 mb-xxs-30">
                <ul class="nav nav-tabs tpl-minimal-tabs animate goqual_tab">
                    <li class="active">
                        <a href="#company" data-toggle="tab">Company</a>
                    </li>
                    <li>
                        <a href="#advise" data-toggle="tab">Advise</a>
                    </li>
                </ul>
            </div>

            <!-- Tab Content -->
            <div class="tab-content tpl-minimal-tabs-cont">
                <div class="tab-pane fade in active" id="company">
                    <div class="row">
                        <div class="col-md-12 mapBox align-c" id="makaluMap"></div>
                        <!-- Contact Section -->
                        <section class="page-section bg-scroll goqual_company_text_color" id="contact">
                            <div class="container relative">
                                <div class="row">
                                    <!-- Contact Info -->
                                    <div class="col-md-4">
                                        <div class="contact-item mb-40 mb-md-20 goqual_company_text_color">
                                            <div class="ci-icon">
                                                <i class="fa fa-phone"></i>
                                            </div>
                                            <div class="ci-title ">Call Us</div>
                                            <div class="ci-phone">070.4738.3000</div>
                                        </div>
                                        <div class="contact-item mb-40 mb-md-20 goqual_company_text_color">
                                            <div class="ci-icon">
                                                <i class="fa fa-map-marker"></i>
                                            </div>
                                            <div class="ci-title ">Address</div>
                                            <div class="ci-text goqual_company_text_color">
                                                @if (Model.Lang == 0)
                                                {
                                                    @:대구광역시 동수 동대구로 475 대구테크노파크 12층 도담관
                                                }
                                                else
                                                {
                                                    @:Daegu, Korea 475, Dongdaegu-ro, Dong-gu 12th floor, dodamkwan
                                            }
                                            </div>
                                        </div>
                                        <div class="contact-item mb-md-40 goqual_company_text_color">
                                            <div class="ci-icon">
                                                <i class="fa fa-envelope"></i>
                                            </div>
                                            <div class="ci-title">Email</div>
                                            <div class="ci-text goqual_company_text_color">GQ@goqual.com</div>
                                        </div>
                                    </div>
                                    <div class="col-md-7 col-md-offset-1 goqual_company_text_color">
                                        <!-- Contact Form -->
                                        <form class="form contact-form" id="contact_form" autocomplete="off">
                                            <div class="clearfix mb-20 mb-xs-0">
                                                <div class="cf-left-col">
                                                    <!-- Name -->
                                                    <div class="form-group">
                                                        <input type="text" name="name" id="name" class="ci-field form-control"
                                                            ng-model="name"
                                                            placeholder="Name" pattern=".{3,100}" required>
                                                    </div>

                                                    <!-- Email -->
                                                    <div class="form-group">
                                                        <input type="email" name="email" id="email" class="ci-field form-control"
                                                            ng-model="email"
                                                            placeholder="Email" pattern=".{5,100}" required>
                                                    </div>

                                                    <!-- phone -->
                                                    <div class="form-group">
                                                        <input type="text" class="ci-field form-control"
                                                            ng-model="phone"
                                                            placeholder="Phone" required>
                                                    </div>
                                                </div>
                                                <div class="cf-right-col">
                                                    <!-- Message -->
                                                    <div class="form-group">
                                                        <label for="message" class="goqual_company_text_color">Message</label>
                                                        <textarea name="message" id="message"
                                                            ng-model="content"
                                                            class="ci-area form-control"></textarea>
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- Send Button -->
                                            <button class="submit_btn btn btn-mod btn-large btn-full ci-btn" ng-click="sendMessage()">
                                                Send
                                            </button>
                                            <div id="result"></div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>

                <!-- Skills -->
                <div class="tab-pane fade" id="advise">
                    <div class="row" style="padding: 10px;">
                        <p class="goqual_tab_title">
                            @if (Model.Lang == 0)
                            {
                                @:GOQUAL은 여러분들의 쓴소리와 조언을 격하게 환영합니다
                                }
                            else
                            {
                                @:Welcome to the your advise for GOQUAL
                                }
                        </p>
                        <div class="goqual_tab_table_body">
                            @if (Model.Lang == 0)
                            {
                                <table ng-table="tableParams" class="table table-striped goqual_table">
                                    <tr ng-repeat="item in advise.items">
                                        <td data-title="'번호'" sortable="'Id'" style="vertical-align: middle;">
                                            <span ng-if="!item.$edit">{{item.Id}}</span>
                                            <div ng-if="item.$edit">
                                                비밀번호
                                            </div>
                                        </td>
                                        <td data-title="'제목'" sortable="'Label'">
                                            <span ng-if="!item.$edit">
                                                <a class="goqual_table_link" ng-click="item.$edit = true">{{item.Title}}</a>
                                            </span>
                                            <div ng-if="item.$edit">
                                                <input class="form-control goqual_table_password" type="password" ng-model="item.password" />
                                            </div>
                                        </td>
                                        <td data-title="'생성일'" sortable="'Created'">
                                            <span ng-if="!item.$edit">{{item.Created | shortdate}}</span>
                                            <span ng-if="item.$edit">
                                                <a ng-if="item.$edit" style="float: right;" class="btn btn-default btn-xs goqual_table_button" ng-click="detailAdvise(item)">확인</a>
                                            </span>
                                        </td>
                                        <td data-title="'보기'">
                                            <a ng-if="!item.$edit" href="" class="btn btn-default btn-xs" ng-click="item.$edit = true">보기</a>
                                            <a ng-if="item.$edit" style="float: left;" class="btn btn-default btn-xs goqual_table_button" ng-click="item.$edit = false">취소</a>
                                        </td>
                                    </tr>
                                </table>
                            }
                            else
                            {
                                <table ng-table="tableParams" class="table table-striped goqual_table">
                                    <tr ng-repeat="item in advise.items">
                                        <td data-title="'Index'" sortable="'Id'" style="vertical-align: middle;">
                                            <span ng-if="!item.$edit">{{item.Id}}</span>
                                            <div ng-if="item.$edit">
                                                Password
                                            </div>
                                        </td>
                                        <td data-title="'Title'" sortable="'Label'">
                                            <span ng-if="!item.$edit">
                                                <a class="goqual_table_link" ng-click="item.$edit = true">{{item.Title}}</a>
                                            </span>
                                            <div ng-if="item.$edit">
                                                <input class="form-control goqual_table_password" type="password" ng-model="item.password" />
                                            </div>
                                        </td>
                                        <td data-title="'Created'" sortable="'Created'">
                                            <span ng-if="!item.$edit">{{item.Created | shortdate}}</span>
                                            <span ng-if="item.$edit">
                                                <a ng-if="item.$edit" style="float: right;" class="btn btn-default btn-xs goqual_table_button_eng"
                                                    ng-click="detailAdvise(item)">Confirm</a>
                                            </span>
                                        </td>
                                        <td data-title="'Detail'">
                                            <a ng-if="!item.$edit" href="" class="btn btn-default btn-xs" ng-click="item.$edit = true">Detail</a>
                                            <a ng-if="item.$edit" style="float: left;" class="btn btn-default btn-xs goqual_table_button_eng"
                                                ng-click="item.$edit = false">Cancel</a>
                                        </td>
                                    </tr>
                                </table>
                            }

                            <ul class="pager">
                                <li>
                                    <a href="/Contact/Mo_Create?lang=@(Model.Lang)">
                                        @if (Model.Lang == 0)
                                        {
                                            @:글 작성
                                        }
                                        else
                                        {
                                            @: Send Advise
                                        }
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- scroll up -->
    <div class="bot-menu local-scroll">
        <!-- Scroll Up -->
        <a href="#top" class="bot-menu-item" data-anim-type="fade-in-left" data-anim-delay="0">
            <span class="bot-menu-icon">
                <i class="fa fa-arrow-circle-o-up"></i>
            </span>
            Scroll Up
        </a>
    </div>
</div>
